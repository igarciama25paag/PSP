<Window x:Class="TxatBezeroa.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TxatBezeroa"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        Title="Bezeroa" Height="450" Width="600">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Border Background="WhiteSmoke" Grid.RowSpan="2"/>

        <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Center" Height="80">
            <Button x:Name="konektatuButton" Click="Konektatu" Content="Zerbitzarira konektatu" Margin="10" Width="150"/>
            <Button x:Name="deskonektatuButton" Click="Deskonektatu"  Content="Zerbitzaritik deskonektatu" Margin="10" Width="150" IsEnabled="False"/>
        </StackPanel>

        <StackPanel Grid.Row="1" Margin="20,20,20,0">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Zerbitzari IP "/>
                    <TextBox x:Name="ip" Text="127.0.0.1" Width="100" TextAlignment="Right"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="20,0,0,0">
                    <TextBlock Text="Izena "/>
                    <TextBox x:Name="izena" Width="100"/>
                </StackPanel>
            </StackPanel>
            <TextBlock x:Name="erroreMezua" TextAlignment="Center" Margin="5" Foreground="Red" FontStyle="Italic"/>
        </StackPanel>

        <GroupBox Grid.Row="2" Header="Txat" Margin="30,10,30,30">
            <DockPanel>
                <StackPanel DockPanel.Dock="Bottom" Margin="10,0,10,10">
                    <TextBox x:Name="mezua"/>
                    <Button Click="Bidali" Content="Bidali" Margin="0,10,0,0"/>
                </StackPanel>
                <ListBox x:Name="txat" Margin="10"/>
            </DockPanel>
        </GroupBox>
    </Grid>
</Window>
